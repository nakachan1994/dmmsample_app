<h1>編集画面</h1>
<!--エラーメッセージ-->
<ul>
  <% if @list.errors.any? %>
  <%= @list.errors.count %>件のエラーが発生しました
    <% @list.errors.full_messages.each do |message| %>
      <li>
        <%= message %>
       </li>
    <% end %>
  <% end %>
</ul>

<%= form_with model:@list,url:"/todolists/#{@list.id}",local:true do |f| %>
  <h4>タイトル</h4>
  <%= f.text_field :title %>
  <h4>本文</h4>
  <%= f.text_area :body %>
  <h4>画像</h4>
  <%= f.attachment_field :image %>
  <%= f.submit '保存' %>
<% end %>

