<div class="container p-5">
  <div class="row">
    <div class="col-2 bg-info">
      <%= render 'todolists/settings' %>
    </div>
    <div class="col-10 d-flex justify-content-center">
      <div class="new-form">
        <h1>新規投稿</h1>
        <!--エラーメッセージ-->
        <ul>
          <% if @list.errors.any? %>
            <%= @list.errors.count %>件のエラーが発生しました
              <% @list.errors.full_messages.each do |message| %>
                <li>
                  <%= message %>
               </li>
              <% end %>
          <% end %>
        </ul>

        <!--form_with部分-->
        <%= form_with model: @list,url:'/todolists',local:true do |f| %>
          <h4>タイトル</h4>
          <%= f.text_field :title %>
          <h4>本文</h4>
          <%= f.text_area :body %>
          <!--画像追加部分-->
          <h4>画像</h4>
          <%= f.attachment_field :image %><br>
          <%= f.submit'投稿', class:'btn btn-success mt-3 float-right' %>
        <% end %>
      </div>

    </div>
  </div>
</div>
